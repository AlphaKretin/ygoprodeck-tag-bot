{
  "name": "ygoprodeck-tag-bot",
  "version": "1.0.0",
  "description": "A Discord bot to display deck tags from YGOPRODeck on command",
  "main": "tagbot.js",
  "scripts": {
    "start": "node tagbot",
    "build": "./node_modules/.bin/tsc",
    "lint": "./node_modules/.bin/eslint tagbot.ts modules/*.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlphaKretin/ygoprodeck-tag-bot.git"
  },
  "keywords": [
    "discord",
    "yu-gi-oh"
  ],
  "author": "AlphaKretin",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/AlphaKretin/ygoprodeck-tag-bot/issues"
  },
  "homepage": "https://github.com/AlphaKretin/ygoprodeck-tag-bot#readme",
  "dependencies": {
    "eris": "^0.11.0",
    "fuse.js": "^3.4.6",
    "node-fetch": "^2.6.1",
    "promise-ftp": "^1.3.5"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.2",
    "@types/promise-ftp": "^1.3.4",
    "@types/ssh2-sftp-client": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "prettier": "^2.2.1",
    "typescript": "^3.6.4"
  },
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier",
			"prettier/@typescript-eslint"
		],
		"rules": {
			"@typescript-eslint/explicit-function-return-type": [
				"warn",
				{
					"allowExpressions": true,
					"allowTypedFunctionExpressions": true,
					"allowHigherOrderFunctions": true,
					"allowDirectConstAssertionInArrowFunctions": true,
					"allowConciseArrowFunctionExpressionsStartingWithVoid": true
				}
			],
			"prefer-template": "error"
		}
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "none",
		"bracketSpacing": true,
		"arrowParens": "avoid"
	}
}
